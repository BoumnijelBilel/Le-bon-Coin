{% extends 'base.html.twig' %}

{% block title %}Administration - Annonce{% endblock %}

{% block body %}
    <h1>Annonce : {{ post.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>Date de publication</th>
                <td>{{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('admin_post_index') }}">Retour</a>

    <a class="btn btn-primary" href="{{ path('admin_post_edit', {'id': post.id}) }}">Modifier</a>

    {{ include('admin/post/_delete_form.html.twig') }}
{% endblock %}
