{% extends 'base.html.twig' %}

{% block title %}Administration - Annonces{% endblock %}

{% block body %}
    <h1>Annonces</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.description }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('admin_post_show', {'id': post.id}) }}">Voir</a>
                    <a class="btn btn-secondary" href="{{ path('admin_post_edit', {'id': post.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune annonce pour le moment.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('admin_post_new') }}">Ajouter une annonce</a>
    <a class="btn btn-secondary" href="{{ path('admin') }}">Retour</a>
{% endblock %}
